<header class="position-fixed top-0 start-0 end-0 d-flex align-items-center justify-content-between px-3 py-2 bg-white shadow-sm" style="z-index:1000;">
  <!-- Left icon -->
  <div class="d-flex align-items-center">
    <button class="btn p-0" aria-label="Settings">
      <img src="/svgs/settings.svg" width="24" height="24" alt="Settings">
    </button>
  </div>

  <!-- Centered title -->
  <h5 class="mb-0 flex-fill text-center"><%= pageTitle %></h5>

  <!-- Right icon -->
  <div class="d-flex align-items-center">
    <button class="btn p-0" aria-label="Notifications">
      <img src="/svgs/bell.svg" width="24" height="24" alt="Notifications">
    </button>
  </div>
</header>
