<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Find Friends</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="/public/css/friends.css"> </style>
</head>
<body>
  <div class="container py-5">
    <div class="text-center mb-5">
      <h1 class="title">ðŸ’¬ Find New Friends</h1>
      <p class="subtitle">Search people and start meaningful conversations</p>
      <div class="search-bar mt-4 mx-auto" style="max-width: 500px;">
        <input type="text" class="form-control shadow-sm" placeholder="Search by name..." id="searchInput" onkeyup="filterFriends()" />
      </div>
    </div>

    <div class="friend-list row justify-content-center g-4" id="friendList">
      <% friends.forEach(friend => { %>
        <div class="col-md-5 friend-card-wrapper">
          <div class="friend-card d-flex align-items-center gap-3 shadow-sm">
            <img src="<%= friend.avatar %>" class="friend-avatar" alt="<%= friend.name %>" />
            <div>
              <h5 class="friend-name mb-1"><%= friend.name %></h5>
              <span class="badge bg-warning text-dark"><%= friend.tag %></span>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
</body>
<script src="/public/js/friends.js"></script>
</html>
