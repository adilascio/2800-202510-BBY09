<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Find Friends</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/friends.css" />
</head>
<body>
  <div class="container py-5">
    <div class="text-center mb-4">
      <h1 class="title text-start">Add Buddies</h1>
      <p class="subtitle text-start">Search and connect with people you know</p>

      <form class="search-bar mt-3 mx-auto" style="max-width: 400px;" method="GET" action="/friends">
        <input
          type="text"
          class="form-control"
          id="searchInput"
          name="search"
          placeholder="Search by name or username..."
          value="<%= searchQuery || '' %>"
          oninput="this.form.submit()"
        />
      </form>
    </div>

    <% if (receivedRequests.length > 0) { %>
      <div class="mb-3">
        <h5 class="fw-semibold text-start">Friend Requests</h5>
        <% receivedRequests.forEach(request => { %>
          <div class="friend-card mb-3">
            <div class="friend-info">
              <img src="<%= request.avatar || '/img/user1.png' %>" class="friend-avatar" alt="<%= request.username %>">
              <div class="friend-text">
                <h6><%= request.name %></h6>
                <small><%= request.username %></small>
              </div>
            </div>
            <form method="POST" action="/accept-request" class="d-inline">
              <input type="hidden" name="fromUsername" value="<%= request.username %>">
              <button type="submit" class="btn btn-outline-success">
                <i class="bi bi-check-circle me-1"></i>Accept
              </button>
            </form>
          </div>
        <% }) %>
      </div>
    <% } %>

    <% if (showSuggested && friends.length > 0) { %>
      <div class="mb-3">
        <h5 class="fw-semibold text-start">Suggested Buddies</h5>
      </div>
    <% } else if (!showSuggested && friends.length > 0) { %>
      <div class="mb-3">
        <h5 class="fw-semibold text-start">Search Results</h5>
      </div>
    <% } %>

    <div class="friend-list" id="friendList">
      <% if (friends.length === 0) { %>
        <p class="text-muted">No matching users found.</p>
      <% } %>
      <% friends.forEach(friend => { %>
        <div class="friend-card mb-3 friend-card-wrapper">
          <div class="friend-info">
            <img src="<%= friend.avatar %>" class="friend-avatar" alt="<%= friend.username %>">
            <div class="friend-text">
              <h6><%= friend.name %></h6>
              <small><%= friend.username %><br><%= friend.description %></small>
            </div>
          </div>
          <% if (friend.status === 'added') { %>
            <button class="btn btn-success" disabled>
              <i class="bi bi-check-lg me-1"></i>Added
            </button>
          <% } else { %>
            <form class="send-request-form d-inline" data-username="<%= friend.username %>">
              <button type="submit" class="btn btn-outline-dark">
                <i class="bi bi-person-plus-fill me-1"></i>Add
              </button>
            </form>
          <% } %>
        </div>
      <% }) %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  <script src="/js/friends.js"></script>
  
  <%- include('templates/navbar', { activeTab: 'messages' }) %>
</body>
</html>