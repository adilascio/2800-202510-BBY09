<!-- views/friends.ejs -->
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Find Friends</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
  <link rel="stylesheet" href="/css/friends.css" />
</head>
<body>
  <div class="container py-5">
    <div class="text-center mb-5">
      <h1 class="title">Add Buddies</h1>
      <p class="subtitle">Search and connect with people you know</p>
      <div class="search-bar mt-3 mx-auto" style="max-width: 400px;">
        <input type="text" class="form-control" id="searchInput" placeholder="Search by name..." onkeyup="filterFriends()">
        <p class="subtitle">Suggested Buddies</p>
      </div>
    </div>

    <div class="friend-list" id="friendList">
      <% friends.forEach(friend => { %>
        <div class="friend-card mb-3 friend-card-wrapper">
          <div class="friend-info">
            <img src="<%= friend.avatar %>" class="friend-avatar" alt="<%= friend.username %>">
            <div class="friend-text">
              <h6><%= friend.name %></h6>
              <small><%= friend.username %><br><%= friend.description %></small>
            </div>
          </div>
          <button class="btn btn-outline-dark add-btn">
            <i class="bi bi-person-plus-fill me-1"></i>Add
          </button>
        </div>
      <% }) %>
    </div>
  </div>

  <script src="/js/friends.js"></script>
</body>
</html>