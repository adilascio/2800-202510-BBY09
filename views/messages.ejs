<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= pageTitle || 'Messages' %></title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- Bootstrap + Icons -->
  <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.5/dist/css/bootstrap.min.css" 
    rel="stylesheet" 
  />
  <link 
    href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" 
    rel="stylesheet" 
  />

  <!-- Your custom styles -->
  <link rel="stylesheet" href="/css/index.css" />
  <link rel="stylesheet" href="/css/messages.css" />

</head>
<body>

  <!-- site‑wide header -->
  <%- include('templates/header', { pageTitle }) %>

  <div class="container py-4">

    <h3 class="fw-bold text-center mb-4">Your Chats</h3>

    <!-- Search Bar -->
    <div class="input-group mb-4 search-bar">
      <span class="input-group-text bg-transparent border-0">
        <!-- hamburger icon -->
        <svg width="20" height="20"><!-- … --></svg>
      </span>
      <input
        type="text"
        id="searchInput"
        class="form-control shadow-sm"
        placeholder="Search by name or username..."
      />
    </div>

    <!-- Friend List -->
    <% const list = Array.isArray(friends) ? friends : []; %>
    <% if (list.length === 0) { %>
      <p class="text-muted text-center">You don't have any friends yet.</p>
    <% } else { %>
      <div id="friendList">
        <% list.forEach(friend => { %>
          <div class="friend-card">
            <div class="d-flex align-items-center">
              <img
                src="<%= friend.avatar || '/img/user1.png' %>"
                class="friend-avatar"
                alt="Avatar of <%= friend.name %>"
              />
              <div>
                <p class="mb-0 fw-semibold"><%= friend.name %></p>
                <small class="text-secondary">@<%= friend.username %></small>
              </div>
            </div>
            <a
              href="/chat/<%= friend.username %>"
              class="message-btn"
              title="Message <%= friend.name %>"
            >
              <i class="bi bi-chat-dots-fill"></i>
            </a>
          </div>
        <% }); %>
      </div>
    <% } %>

  </div>

  <!-- site‑wide bottom navbar -->
  <%- include('templates/navbar', { activeTab: 'messages' }) %>

  <script>
    // Live search filter
    document.getElementById('searchInput').addEventListener('input', function () {
      const q = this.value.toLowerCase();
      document.querySelectorAll('.friend-card').forEach(card => {
        const name = card.querySelector('.fw-semibold').textContent.toLowerCase();
        const uname = card.querySelector('small').textContent.toLowerCase();
        card.style.display = name.includes(q) || uname.includes(q) ? '' : 'none';
      });
    });
  </script>
</body>
</html>
