<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1, shrink-to-fit=no">
  <title>Messages</title>
  <!-- Bootstrap 5 CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-…"
    crossorigin="anonymous"
  >
  <style>
    body { padding-bottom: 60px; /* space for bottom nav */ }
    .avatar {
      width: 40px; height: 40px;
      border-radius: 50%;
      background-color: #B8A2FF;
      color: #fff;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: bold;
    }
    .search-input {
      background-color: #EDECF7;
      border: none;
      border-radius: 25px;
    }
    .search-input:focus {
      box-shadow: none;
    }
    .add-friend-btn {
      border: 1px solid #B8A2FF;
      color: #5C3E90;
    }
    .list-check {
      width: 24px; height: 24px;
      background-color: #EDECF7;
      border-radius: 4px;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    .bottom-nav .btn {
      flex: 1;
    }
  </style>
</head>
<body class="bg-light">

  <%- include('templates/header', { pageTitle: 'Messages' }) %>

  <main class="px-3 pt-3">

    <!-- Search Bar -->
    <div class="input-group mb-3">
      <span class="input-group-text bg-transparent border-0">
        <!-- insert hamburger SVG here -->
        <svg width="20" height="20"><!-- … --></svg>
      </span>
      <input
        type="text"
        class="form-control search-input"
        placeholder="Hinted search text"
      >
      <button class="btn bg-transparent border-0">
        <!-- insert search SVG here -->
        <svg width="20" height="20"><!-- … --></svg>
      </button>
    </div>

    <!-- Add Friend Button -->
    <div class="d-flex justify-content-center mb-3">
      <button class="btn add-friend-btn px-4">
        <!-- insert user-plus SVG here -->
        <svg width="18" height="18" class="me-2"><!-- … --></svg>
        Add New Friend
      </button>
    </div>

        <!-- USERS PLACEHOLDER -->
        <div id="user-list" class="list-group">
            <!-- JS will inject user list in here -->
          </div>
          
  </main>

  <%- include('templates/navbar', {activeTab: 'messages'}) %>

  <!-- Bootstrap 5 JS bundle -->
  <script
    src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-…"
    crossorigin="anonymous"
  ></script>
</body>
</html>
