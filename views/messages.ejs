<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, height=device-height, initial-scale=1, shrink-to-fit=no">
  <title>Messages</title>
  <!-- Bootstrap 5 CSS -->
  <link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
    crossorigin="anonymous"
  >
</head>
<body class="bg-light">

  <%- include('templates/header', { pageTitle: 'messages' }) %>

  <main class="px-3 pt-3">

    <!-- Search Bar -->
    <div class="input-group mb-3">
      <span class="input-group-text bg-transparent border-0">
        <!-- insert hamburger SVG here -->
        <svg width="20" height="20"><!-- … --></svg>
      </span>
      <input
        type="text"
        class="form-control search-input"
        placeholder="Hinted search text"
      >
      <button class="btn bg-transparent border-0">
        <!-- insert search SVG here -->
        <svg width="20" height="20"><!-- … --></svg>
      </button>
    </div>

    <!-- Add Friend Button -->
    <div class="d-flex justify-content-center mb-3">
      <button class="btn add-friend-btn px-4">
        <!-- insert user-plus SVG here -->
        <svg width="18" height="18" class="me-2"><!-- … --></svg>
        Add New Friend
      </button>
    </div>

        <!-- USERS PLACEHOLDER -->
        <div id="user-list" class="list-group">
            <!-- JS will inject user list in here -->
          </div>
          
  </main>

  <%- include('templates/navbar', {activeTab: 'messages'}) %>

  <!-- Bootstrap 5 JS bundle -->
  <script
  src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"
  integrity="sha384-C6RzsynM9kWDrMNeT87bh95OGNyZPhcTNXj1NW7RuBCsyN/o0jlpcV8Qyq46cDfL"
  crossorigin="anonymous"
></script>
</body>
</html>
